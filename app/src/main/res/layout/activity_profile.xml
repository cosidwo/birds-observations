<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activities.ProfileActivity"
    android:background="#164A41">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:gravity="center">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:text="Ustawienia profilu"
            android:textSize="26dp"
            android:gravity="center"
            android:layout_marginTop="10dp">
        </com.google.android.material.textview.MaterialTextView>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:id="@+id/emailTextView">
        </com.google.android.material.textview.MaterialTextView>
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:id="@+id/nameTextView"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp">
        </com.google.android.material.textview.MaterialTextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:hint="Zmień imię"
            android:textColorHint="#fff"
            android:layout_marginBottom="15dp"
            android:layout_marginTop="15dp">
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/changeNameInput"
                android:background="#4D774E"
                android:textColor="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:hint="Zmień nazwisko"
            android:textColorHint="#fff"
            android:layout_marginBottom="15dp"
            >
            <com.google.android.material.textfield.TextInputEditText
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:id="@+id/changeSurnameInput"
                android:background="#4D774E"
                android:textColor="#fff"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/acceptChangesButton"
            android:text="Akceptuj zmiany"
            android:textColor="#F1B24A"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#F1B24A"
            android:onClick="acceptChanges"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>