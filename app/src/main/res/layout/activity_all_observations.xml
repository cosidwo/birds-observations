<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".AllObservationsActivity"
    android:background="#164A41"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mapowanie gatunkowe"
            android:textSize="26dp"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_marginTop="8dp"
            >
        </com.google.android.material.textview.MaterialTextView>
        <com.google.android.material.textfield.TextInputLayout
            android:layout_height="wrap_content"
            android:id="@+id/species"
            android:layout_width="370dp"
            android:hint="Gatunek"
            android:layout_marginTop="10dp"
            android:textColorHint="#fff"
            android:background="#4D774E"
            android:layout_marginBottom="15dp"
            android:layout_gravity="center"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense.ExposedDropdownMenu"
            >
            <AutoCompleteTextView
                android:id="@+id/dropdownMenuMapping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="none"
                android:paddingLeft="8dp"
                android:background="#4D774E"
                android:textColor="#fff"
                android:textColorHint="#fff"
                android:enabled="false"
                />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/mapSpeciesButton"
            android:text="Mapuj"
            android:layout_gravity="center"
            android:textColor="#F1B24A"
            style="?attr/materialButtonOutlinedStyle"
            app:strokeColor="#F1B24A"
            android:layout_marginBottom="5dp"/>
        <fragment
            android:layout_width="match_parent"
            android:layout_height="450dp"
            android:layout_marginTop="20dp"
            android:id="@+id/mapChosenSpecies"
            android:name="com.google.android.gms.maps.SupportMapFragment">
        </fragment>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>